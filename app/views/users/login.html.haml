.common-container
  = render 'shared/signup-header'
  %main.login-main
    .login-panel
      .login-no-account
        %p
          アカウントをお持ちでない方はこちら
        = link_to "新規会員登録"
      .login-form-inner
        = link_to user_facebook_omniauth_authorize_path, method: :post, class: "btn-default btn-sns btn-sns-facebook" do
          = fa_icon "facebook-square"
          Facebookでログイン
        = link_to user_google_oauth2_omniauth_authorize_path, method: :post, id: "google-login", class: "btn-default btn-sns btn-sns-google" do
          = image_tag "googlelogo.png"
          Googleでログイン
      = form_for(resource, as: resource_name, url: user_session_path, method: :post, novalidate: "novalidate") do |f|
        .login-form-inner
          .form-group
            = f.email_field :email, value: "", placeholder: "メールアドレス", class: "login-input-text input-default"
          .form-group
            = f.password_field :password, placeholder: "パスワード", class: "login-input-text input-default"
          .form-group
            = recaptcha_tags
                  
          = f.submit "ログイン", class: "login-submit btn-default btn-red"
          =link_to "パスワードをお忘れの方"
    -# ページのフッダー部分
  = render 'shared/signup-footer'