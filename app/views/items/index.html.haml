      .middle__content
        .link-list
          .slider
            フリーマーケットサイト チーム56b

    
    .popular
      %h2.popular__title.bold
        人気のカテゴリー
      .popular__box
        %ul.popular__box--lists
          %li.list
            = link_to "レディース", "", id: "category-ladies"
          %li.list
            = link_to "メンズ", "", id: "category-mens"
          %li.list
            = link_to "家電・スマホ・カメラ", "", id: "category-phones"
          %li.list
            = link_to "おもちゃ・ホビー・グッズ", "", id: "category-toys"
    .popular-items
      .popular-header
        .popular-header__item
          %h3.popular-header__item__title#target-ladies
            レディース新着アイテム
          = link_to "#" do
            もっと見る
            = fa_icon "chevron-right"
        .popular-content
          .popular-content__items
            %ul.popular-content__items--list
              // データベースから並べる時に使用
              - @ladies.each do |lady|
                %li.popular-content__item
                  %div{style: "visibility: visible; transition: all 0.5s ease 0s; opacity: 1;"}
                    = link_to item_path(lady), class: "items-link" do
                      .item-box
                        %span
                          ¥
                          = lady.price
                        = image_tag lady.photos.first.photo.to_s
                        - unless lady.buyer_id.nil?
                          %figcaption
                            .item-sold-out-badge
                              .soldout SOLD
                      .item-name
                        %span
                          = lady.name

