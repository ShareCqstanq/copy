-# ページのヘッダー部分
.common-container
  = render "shared/signup-header"
  -# 登録方法選択画面
  %main.contents-main
    %section.contents-container
      %h2.contents-head
        新規会員登録
      .contents.registration-form
        .contents-select
          = link_to registration_signup_index_path ,class:"contents__btn mail-address" do
            = fa_icon 'envelope'
            メールアドレスで登録する
          = link_to user_facebook_omniauth_authorize_path, method: :post, class: "contents__btn facebook" do
            = fa_icon 'facebook-square'
            Facebookで登録する
          = link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: "contents__btn google" do
            = image_tag "googlelogo.png"
            Googleで登録する
    -# ページのフッダー部分
  = render 'shared/signup-footer'
