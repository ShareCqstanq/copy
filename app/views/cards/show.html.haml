.common-container
  .common-header
    %h1
      //支払い方法入力画面のヘッダー
      = link_to root_path do
        = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?4194600336", alt: "merucari",class: 'common-header__image'
  %main.l-step4-container.clearfix
    .l-step4-content
      %section.l-chapter-container
        %h2.l-chapter-head
          支払い方法
        .l-step4-inner
          .l-step4-content
            %label.l-chapter-sub-head 登録クレジットカード情報
          %ul.settings-payment-list
            %li
              .l-step4-content
                %img{src:"//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?465897195", width:"49", height:"20"}
                %br
                = "**** **** **** " + @default_card_information.last4
                %br
                - exp_month = @default_card_information.exp_month.to_s
                - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
                = exp_month + " / " + exp_year
                = form_tag(delete_cards_path, method: :post, id: 'charge-form', name: "inputForm")do
                  %input{ type: "hidden", name: "card_id", value: "" }
                  %button.delete__button 削除する
      .settings-not-regist
        = link_to '', class: "how-not-regist" do
          %span 支払い方法について
          = fa_icon "chevron-right"
